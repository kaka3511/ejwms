body{background-color:#fcfcfc}
.avatar-view{display:block;overflow:hidden;margin:15% auto 5%;width:220px;height:220px;border:3px solid #fff;border-radius:5px;box-shadow:0 0 5px rgba(0,0,0,.15);cursor:pointer}
.avatar-view img{width:100%}
.avatar-body{padding-right:15px;padding-left:15px}
.avatar-upload{overflow:hidden}
.avatar-upload label{float:left;clear:left;display:block;width:100px}
.avatar-upload input{display:block;margin-left:110px}
.avatar-alert{margin-top:10px;margin-bottom:10px}
.avatar-wrapper{overflow:hidden;margin-top:15px;width:100%;height:364px;background-color:#fcfcfc;box-shadow:inset 0 0 5px rgba(0,0,0,.25)}
.avatar-wrapper img{display:block;height:auto;max-width:100%}
.avatar-preview{overflow:hidden;border:1px solid #eee;border-radius:4px;background-color:#fff}
.avatar-preview:hover{border-color:#ccf;box-shadow:0 0 5px rgba(0,0,0,.15)}
.avatar-preview img{width:100%}
.preview-lg{margin-top:15px;width:184px;height:184px}
.preview-md{width:100px;height:100px}
.preview-sm{width:50px;height:50px}
.avatar-btns{margin-top:30px;margin-bottom:15px}
.avatar-btns .btn-group{margin-right:5px}
